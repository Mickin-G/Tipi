{
  "$schema": "../schema.json",
  "name": "Revolt Chat",
  "port": 8272,
  "available": true,
  "exposable": true,
  "force_expose": true,
  "generate_vapid_keys": true,
  "id": "revolt",
  "tipi_version": 3,
  "version": "1.1.8/20230421-3",
  "categories": ["media"],
  "description": "Open source user-first chat platform.",
  "short_desc": "Open source user-first chat platform.",
  "author": "RevoltChat",
  "source": "https://github.com/revoltchat",
  "form_fields": [
    {
      "type": "random",
      "label": "Revlot Minio Root Password",
      "min": 32,
      "env_variable": "REVOLT_MINIO_ROOT_PASSWORD"
    },
    {
      "type": "random",
      "label": "Revlot Minio Root Password",
      "min": 32,
      "env_variable": "REVOLT_MINIO_ROOT_PASSWORD"
    },
    {
      "type": "random",
      "label": "Revlot AWS Access Key",
      "min": 16,
      "max": 16,
      "env_variable": "REVOLT_AWS_ACCESS_KEY_ID"
    },
    {
      "type": "random",
      "label": "Revlot AWS Secret Access Key",
      "min": 32,
      "max": 32,
      "env_variable": "REVOLT_AWS_SECRET_ACCESS_KEY"
    },
    {
      "type": "text",
      "label": "SMTP Host",
      "hint": "Your SMTP Server",
      "placeholder": "smtp.example.com",
      "required": true,
      "env_variable": "REVOLT_SMTP_HOST"
    },
    {
      "type": "text",
      "label": "SMTP Username",
      "hint": "Your SMTP Server User/Username",
      "placeholder": "noreply@example.com",
      "required": true,
      "env_variable": "REVOLT_SMTP_USERNAME"
    },
    {
      "type": "text",
      "label": "SMTP Password",
      "hint": "Your SMTP Server Password",
      "required": true,
      "env_variable": "REVOLT_SMTP_PASSWORD"
    },
    {
      "type": "text",
      "label": "SMTP From Address",
      "placeholder": "Revolt <noreply@example.com>",
      "required": true,
      "env_variable": "REVOLT_SMTP_FROM"
    },
    {
      "type": "text",
      "label": "Revolt Invite Only",
      "hint": "Set to 1 if you want to make your instance Invite Only. If not set 0",
      "placeholder": "0",
      "required": true,
      "env_variable": "REVOLT_INVITE_ONLY"
    },
    {
      "type": "text",
      "label": "Revolt Vapid Public Key",
      "hint": "Vapid Public Key (Check Install Documents)",
      "required": true,
      "env_variable": "REVOLT_VAPID_PUBLIC_KEY"
    },
    {
      "type": "text",
      "label": "Revolt Vapid Private Key",
      "hint": "Vapid Private Key (Check Install Documents)",
      "required": true,
      "env_variable": "REVOLT_VAPID_PRIVATE_KEY"
    }
  ]
}
