{
   "$schema": "../schema.json",
   "name": "Mempool",
   "available": true,
   "exposable": false,
   "no_gui": false,
   "port": 2200,
   "id": "mempool",
   "description": "Bitcoin mempool visualizer and blockchain explorer",
   "tipi_version": 1,
   "version": "2.5.1",
   "categories": [
      "finance"
   ],
   "short_desc": "Bitcoin mempool visualizer and blockchain explorer",
   "author": "The mempool team",
   "source": "https://github.com/mempool/mempool",
   "supported_architectures": [
      "amd64",
      "arm64"
   ],
   "form_fields": [
      {
         "type": "text",
         "label": "Bitcoin node host address",
         "hint": "Default, tipi bitcoin host",
         "required": false,
         "env_variable": "CORE_RPC_HOST"
      },
      {
         "type": "text",
         "label": "Bitcoin node RPC username",
         "hint": "You have to add it on the bitcoin.conf file",
         "required": true,
         "env_variable": "CORE_RPC_USERNAME"
      },
      {
         "type": "password",
         "label": "Bitcoin node RPC password",
         "hint": "You have to add it on the bitcoin.conf file",
         "required": true,
         "env_variable": "CORE_RPC_PASSWORD"
      },
      {
         "type": "password",
         "label": "DB password",
         "min": 32,
         "env_variable": "MEMPOOL_DB_PASSWORD"
      }
   ]
}